<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstDishesFragment">

    <ImageView
        android:id="@+id/textview_first"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@mipmap/dishes2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#8F682020"
        android:gravity="center"
        android:text="  Блюда  "
        android:textColor="@color/white"
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textview_first" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#8F682020"
        android:text="\n
        Паэлья            Морковь по-корейски      \n
        Биск                                               Омлет      \n
        Жареные кальмары              Ризотто      \n
        Равиоли                                        Пицца      \n
        Вареники                                        Борщ      \n
        Винегрет                                   Вергуны      \n
        Голубцы                      Гречневая каша      \n
        Гороховая каша           Ячневая каша      \n
        Йоркширский пудинг                 Кутья      \n
        Картофельный хлеб        Смузи-боул      \n
        Мясной пирог                             Лимпа      \n
        Шоколадные шарики            Розетта      \n
        Квашеная капуста       \n"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textview_first" />
</androidx.constraintlayout.widget.ConstraintLayout>